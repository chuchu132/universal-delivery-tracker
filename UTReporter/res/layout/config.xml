<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_common" android:gravity="center" android:layout_marginBottom="10px">

<LinearLayout
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroud_title"
    android:gravity="center" >

<TextView
    android:id="@+id/Title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/config_title"
    android:textColor="#ffffff"
    android:textSize="30dip"
    android:textStyle="bold"
    android:typeface="sans" >

</TextView>
</LinearLayout>

<LinearLayout
    android:id="@+id/linearLayout3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    android:paddingTop="20px">

    <CheckBox
        android:id="@+id/trackme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trackmypos" android:textColor="#fff" android:textSize="20dip" android:textStyle="bold" android:typeface="sans"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interval" android:textSize="20dip" android:textStyle="bold" android:typeface="sans" android:textColor="#fff"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/barra"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:max="120"
            android:progress="10"/>

        <TextView
            android:id="@+id/textbarra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 seg"
            android:textColor="#fff"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" android:layout_marginTop="5dip" android:layout_margin="10px">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/btn_normal"
            android:padding="5px"
            android:text="@string/guardar"
            android:textColor="#fff"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_weight="2"
            android:background="@drawable/btn_normal"
            android:padding="5px"
            android:text="@string/cancel"
            android:textColor="#fff"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>

</LinearLayout>



</LinearLayout>
